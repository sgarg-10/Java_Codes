import java.util.*;
class Main {
   public static void main(String args[]) {
      Scanner scan=new Scanner(System.in);
System.out.println(“Enter 3 numbers”);
      int a=scan.nextInt();
      int b=scan.nextInt();
      int c=scan.nextInt();
      int largest= a>b && a>c ? a : b>c && b>a ? b : c;
      System.out.println(“largest number is: “ + largest);
  }
}
